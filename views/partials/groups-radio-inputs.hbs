{{#if groups}}
    <h3>
        Choose a group
    </h3>
    {{#each groups}}
        <input type="radio" name="groupId" id="{{this.groupName}}" value="{{this.id}}" required >
        <label for="{{this.groupName}}">{{this.groupName}} {{this.level}} </label>
    {{/each}}

{{else}}
    <strong>
        No groups to choose in database. <br>
        Student will be added to main list.
    </strong>
{{/if}}